{
  "name": "mediaserver",
  "version": "1.0.0",
  "description": "mediasoup server for inclubit 2",
  "main": "./dist/routers/appRouter.js",
  "exports": {
    ".": {
      "import": "./dist/routers/appRouter.js",
      "require": "./dist/routers/appRouter.js",
      "types": "./dist/routers/appRouter.d.ts"
    }
  },
